

<%= link_to "Add a new Patient" , new_patient_path %>
<%= simple_form_for [@patient, @appointment] do |f| %>
  <%= f.input :reason %>
  <%= f.input :urgent %>
  <%= f.input :date %>
  <%= f.association :doctor, collection: Doctor.where(availability: true), label_method: :create_collection_tag %>
  <%= f.submit %>
<% end %>
